{% comment %}
  The share buttons share the home page URL. The share text is grabbed from the store
  meta description.
{% endcomment %}

{% layout 'password' %}

<h2>{{ 'general.password_page.opening_soon' | t }}</h2>

{% unless shop.password_message == blank %}
  <p>
    {{ shop.password_message }}
  </p>
{% endunless %}

{% form 'customer' %}

  {% capture errors %}{{ form.errors | default_errors | strip_html | strip }}{% endcapture %}
  {%- if errors.size > 0 -%}
    {% render 'dialog' with errors %}
  {%- endif -%}

  {% capture text %}{{ 'general.password_page.signup_form_success' | t }}{% endcapture %}
  {% if form.posted_successfully? %}
    {% render 'dialog' with text %}
  {% endif %}

    <h4>{{ 'general.password_page.signup_form_heading' | t }}</h4>
    <input type="hidden" name="contact[tags]" value="prospect, password page">
    <label for="email">
      {{ 'general.password_page.signup_form_email_label' | t }}
    </label>
    <input type="email"
      name="contact[email]"
      id="Email"
      spellcheck="false"
      autocomplete="off"
      autocapitalize="off"
      placeholder="{{ 'general.password_page.signup_form_email_placeholder' | t }}">
    <button type="submit" name="commit" class="button">
      {{ 'general.password_page.signup_form_submit' | t }}
    </button>
  {% endif %}
{% endform %}

<a href="#Login">
  {{ 'general.password_page.password_link' | t }} &rarr;
</a>
